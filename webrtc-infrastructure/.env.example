# WebRTC STUN/TURN Server Configuration
# Copy this file to .env and fill in your values

# GCP Configuration (Required)
PROJECT_ID=your-gcp-project-id
REGION=us-central1
ENVIRONMENT=prod

# TURN Server Configuration
DOMAIN=turn.yourdomain.com
EXTERNAL_IP=auto-detect
TURN_SECRET=auto-generate

# Database Configuration (Optional - will be auto-configured if not set)
POSTGRES_HOST=
POSTGRES_USER=coturn
POSTGRES_PASSWORD=
POSTGRES_DB=coturn

# Redis Configuration (Optional - will be auto-configured if not set)
REDIS_HOST=
REDIS_PORT=6379
REDIS_PASSWORD=

# SSL Configuration
SSL_CERT_PATH=./coturn/certs/cert.pem
SSL_KEY_PATH=./coturn/certs/privkey.pem

# Performance Configuration
RELAY_THREADS=4
MAX_ALLOCATE_LIFETIME=3600
USER_QUOTA=50
TOTAL_QUOTA=1000

# Security Configuration
MONITORING_USER=monitor
MONITORING_PASS=monitoring-password
CLI_PASSWORD=auto-generate

# Deployment Configuration
DEPLOYMENT_TYPE=compute  # compute or cloud-run
INSTANCE_COUNT=3
MACHINE_TYPE=n2-standard-4

# Logging and Monitoring
LOG_LEVEL=info
ENABLE_PROMETHEUS=true
ENABLE_HEALTH_CHECK=true